{
  "task": "006_train_vrt_videodeblurring_gopro_rgbspike"
  , "model": "vrt"
  
  // ========================================
  // Distributed Training Configuration
  // ========================================
  // "dist": Auto-detected from WORLD_SIZE environment variable
  //         - Set automatically when using torchrun or platform DDP
  //         - Manual setting is ignored in favor of auto-detection
  //         - Leave as 'true' for documentation purposes
  //
  // "gpu_ids": GPU device IDs
  //         - In single-process mode: specifies which GPUs to use (e.g., [0,1,2])
  //         - In distributed mode (DDP): ignored, devices assigned by torchrun/platform
  //         - Use [0] for single GPU training
  //         - Setting CUDA_VISIBLE_DEVICES is handled automatically
  //
  // Platform DDP: Platform injects RANK/LOCAL_RANK/WORLD_SIZE, run with:
  //   python -u main_train_vrt.py --opt THIS_CONFIG.json
  //
  // Local multi-GPU: Use torchrun, which sets environment variables:
  //   torchrun --nproc_per_node=N main_train_vrt.py --opt THIS_CONFIG.json
  //
  // Or use the provided launcher script:
  //   ./launch_train.sh N THIS_CONFIG.json
  // ========================================
  
  , "gpu_ids": [0,1,2]
  , "dist": true
  , "find_unused_parameters": false
  , "use_static_graph": true

  ,"scale": 1
  , "n_channels": 3

  , "path": {
    "root": "experiments"
    , "pretrained_netG": null
    , "pretrained_netE": null
  }

  , "datasets": {
    "train": {
      "name": "train_dataset"
      , "dataset_type": "VideoRecurrentTrainDatasetRGBSpike"
      , "dataroot_gt": "trainsets/GoPro/train_GT"
      , "dataroot_lq": "trainsets/GoPro/train_GT_blurred"
      , "dataroot_spike": "trainsets/gopro_spike/GOPRO_Large_spike_seq/train"
      , "spike_h": 250
      , "spike_w": 400
      , "spike_channels": 1
      , "spike_flipud": true
      , "meta_info_file": "data/meta_info/meta_info_GoPro_train_GT.txt"
      , "filename_tmpl": "06d"
      , "filename_ext": "png"
      , "test_mode": false
      , "io_backend": {"type": "disk"}
      , "scale": 1
      , "num_frame": 6
      , "gt_size": 224
      , "interval_list": [1]
      , "random_reverse": false
      , "use_hflip": true
      , "use_rot": true

      , "dataloader_shuffle": true
      , "dataloader_num_workers": 64
      , "dataloader_batch_size": 3
    }
    , "test": {
      "name": "test_dataset"
      , "dataset_type": "VideoRecurrentTestDataset"
      , "dataroot_gt": "testsets/GoPro11/test_GT"
      , "dataroot_lq": "testsets/GoPro11/test_GT_blurred"
      , "cache_data": false
      , "io_backend": {"type": "disk"}
      , "num_frame": -1
    }
  }

  , "netG": {
    "net_type": "vrt"
    , "in_chans": 4
    , "upscale": 1
    , "img_size": [6,224,224]
    , "window_size": [6,8,8]
    , "depths": [8,8,8,8,8,8,8, 4,4, 4,4]
    , "indep_reconsts": [9,10]
    , "embed_dims": [96,96,96,96,96,96,96, 120,120, 120,120]
    , "num_heads": [6,6,6,6,6,6,6, 6,6, 6,6]
    , "spynet_path": "model_zoo/vrt/spynet_sintel_final-3d2a1287.pth"
    , "pa_frames": 2
    , "deformable_groups": 16
    , "nonblind_denoising": false

    , "use_checkpoint_attn": true
    , "use_checkpoint_ffn": true
    , "no_checkpoint_attn_blocks": [2,3,4]
    , "no_checkpoint_ffn_blocks": [1,2,3,4,5,9]

    , "init_type": "default"
  }


  , "train": {
    "G_lossfn_type": "charbonnier"
    , "G_lossfn_weight": 1.0
    , "G_charbonnier_eps": 1e-9

    , "E_decay": 0

    , "G_optimizer_type": "adam"
    , "G_optimizer_lr": 4e-4
    , "G_optimizer_betas": [0.9,0.99]
    , "G_optimizer_wd": 0
    , "G_optimizer_clipgrad": null
    , "G_optimizer_reuse": true

    , "fix_iter": 20000
    , "fix_lr_mul": 0.125
    , "fix_keys": ["spynet", "deform"]

    , "total_iter": 300000
    , "G_scheduler_type": "CosineAnnealingWarmRestarts"
    , "G_scheduler_periods": 300000
    , "G_scheduler_eta_min": 1e-7

    , "G_regularizer_orthstep": null
    , "G_regularizer_clipstep": null

    , "G_param_strict": true
    , "E_param_strict": true

    , "checkpoint_test": 5000
    , "checkpoint_save": 5000
    , "checkpoint_print": 200
  }

  , "val": {
    "save_img": false
    , "pad_seq": false
    , "flip_seq": false
    , "center_frame_only": false
    , "num_frame_testing": 18
    , "num_frame_overlapping": 2
    , "size_patch_testing": 224
  }

}

